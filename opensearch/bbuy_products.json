{
  "settings": {
    "index.refresh_interval": "5s",
    "analysis": {
      "analyzer": {
        "default_analyzer": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "default_stemmer"
          ]
        }
      },
      "filter": {
        "default_stemmer": {
          "type": "stemmer",
          "language": "english"
        }
      }
    }
  },
  "mappings": {
    "properties":{
      "user": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "sku": {
        "type": "long"
      },
      "category": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "name": {
        "type": "text",
        "analyzer": "default_analyzer"
      },
      "shortDescription": {
        "type": "text",
        "analyzer": "default_analyzer"
      },
      "longDescription": {
        "type": "text",
        "analyzer": "default_analyzer"
      },
      "image": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "department": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "regularPrice": {
        "type": "float"
      }
    }
  }
}